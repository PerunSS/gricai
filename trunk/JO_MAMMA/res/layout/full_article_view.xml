<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

	<ImageView 
		android:layout_height="50sp" 
		android:id="@+id/fullArticle_Logo" 
		android:background="@drawable/novosti_logo"
		android:layout_width="fill_parent"/>
	<HorizontalScrollView 
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:id="@+id/fullArticle_menuScrollView"
		>

			<LinearLayout 
				android:id="@+id/fullArticle_Menu" 
				android:layout_height="wrap_content" 
				android:layout_width="wrap_content" 
				android:orientation="horizontal">
			</LinearLayout>
	</HorizontalScrollView>
	<ScrollView
		android:id="@+id/fullArticle_View"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"	
		>
		<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
		<TextView
			android:id="@+id/fullArticle_Title"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="25sp"	
		/>
		<TextView
			android:id="@+id/fullArticle_Source"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="15sp"	
		/>
		<TextView
			android:id="@+id/fullArticle_ShortText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="20sp"	
		/>
		<ImageView
			android:id="@+id/fullArticle_Photo"
			android:layout_height="200sp"  
			android:layout_width="fill_parent"
		/>
		<TextView
			android:id="@+id/fullArticle_FullText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="15sp"	
		/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>
