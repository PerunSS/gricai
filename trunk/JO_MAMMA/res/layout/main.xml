<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:background="#FE0000">


	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent" 
		android:layout_height="60dp">
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			android:layout_weight="1">
			<include layout="@layout/logo_view" 
			android:id="@+id/Logo_ref"/>
		</LinearLayout>
		
		
		<include layout="@layout/homebutton" 
			android:id="@+id/HomeButton"/>
		<include layout="@layout/imagegallerybutton" 
			android:id="@+id/ImageGalleryButton"/>
			
			
	</LinearLayout>
	
	<View
		android:layout_width="fill_parent"
		android:layout_height="2dp"
		android:background="#FFFFFF"/>
	
	
	<include layout="@layout/menuscrollview" 
		android:id="@+id/menuScrollView"  />
	
	<View
		android:layout_width="fill_parent"
		android:layout_height="2dp"
		android:background="#FE0000"/>

	<ListView 
		android:id="@+id/Content" 
		android:layout_height="fill_parent"
		android:layout_width="fill_parent" 
		android:divider="#888888"
		android:cacheColorHint="#00000000">
	</ListView>
</LinearLayout>
