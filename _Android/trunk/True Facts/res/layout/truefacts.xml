<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	xmlns:myapp="http://schemas.android.com/apk/res/com.cerSprikRu.TrueFacts"
   	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="#FFFFFF">
  	<LinearLayout
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:layout_weight="30">
  		<ImageView 
  			android:src="@drawable/applogo"
  			android:scaleType="fitXY"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="15"
  		/>
  		<Button
  			android:id ="@+id/search"
  			android:background="@drawable/search_button"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="22"/>
  		<Button
  			android:id="@+id/addToFavorites"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="22"/>
  		<Button 
  			android:id="@+id/openFavorites"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/favorites_button"
  			android:layout_weight="22"/>	 	
  	</LinearLayout>  
  	
  	<LinearLayout
  		android:orientation="vertical"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:background="@drawable/bckground"
  		android:layout_weight="9">
  		<TextView
  			android:id="@+id/factText"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:textSize="27dp"
  			android:gravity="center"
  			android:textColor="#000000"
 			android:layout_weight="2"
  		/>
  		<TextView
  			android:id="@+id/factPublisher"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:textSize="14dp"
  			android:gravity="right"
  			android:textColor="#777777"
 			android:layout_weight="15"
 			/>
  			
  	</LinearLayout>	
  	<LinearLayout
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:layout_weight="30">
  		<Button
  			android:id="@+id/previous"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/previous_button"
  			android:layout_weight="1"/>
  		<Button 
  			android:id="@+id/next"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/next_button"
  			android:layout_weight="1"/>
  		<Button 
  			android:id="@+id/random"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/random_button"
  			android:layout_weight="1"/>	
  		<Button 
  			android:id="@+id/share"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/share_button"
  			android:layout_weight="1"/>
  	</LinearLayout>
  	<com.admob.android.ads.AdView
		android:id="@+id/ad"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		myapp:backgroundColor="#000000"
		myapp:primaryTextColor="#FFFFFF"
		myapp:secondaryTextColor="#CCCCCC"
	/>
</LinearLayout>