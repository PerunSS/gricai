<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">27dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">27dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="player_selection_small_buttons">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">27dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="input_text_style">
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="radio_group_style">
    	<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginLeft">50dp</item>
    </style>
</resources>
