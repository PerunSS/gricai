<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/background">
    <RadioGroup 
		android:id="@+id/dirtinessSelection"
		style="@style/radio_group_style"
		android:layout_marginTop="60dp"
		android:orientation="vertical">
		<RadioButton 
			android:id="@+id/funny"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:button="@drawable/checker"
			android:text="Funny"
			android:tag="1"
			android:textSize="24dp"/>
		<RadioButton 
			android:id="@+id/tempting"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:button="@drawable/checker"
			android:text="Tempting"
			android:tag="2"
			android:textSize="24dp"/>
		<RadioButton 
			android:id="@+id/sexy"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:button="@drawable/checker"
			android:text="Sexy"
			android:tag="3"
			android:textSize="24dp"/>
		<RadioButton 
			android:id="@+id/dirty"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:button="@drawable/checker"
			android:text="Dirty"
			android:tag="4"
			android:textSize="24dp"/>
	</RadioGroup>
	<View 
		android:layout_margin="15dp"
		android:layout_width="fill_parent"
		android:layout_height="2dp"
		android:background="#d1651c"/>
	<RadioGroup 
		android:id="@+id/levelSelection"
		style="@style/radio_group_style"
		android:orientation="horizontal">
		<RadioButton 
			android:id="@+id/lvl1"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:textSize="0dp"
			android:tag="1"/>
		<RadioButton 
			android:id="@+id/lvl2"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:tag="2"/>
		<RadioButton 
			android:id="@+id/lvl3"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:tag="3"/>
		<RadioButton 
			android:id="@+id/lvl4"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:tag="4"/>
		<RadioButton 
			android:id="@+id/lvl5"
			android:layout_width="40dp"
			android:layout_height="40dp"
			android:layout_weight="1"
			android:tag="5"/>
	</RadioGroup>
    <Button 
		android:id="@+id/selectDirtinessButton"
		android:layout_width="fill_parent"
		android:layout_height="60dp"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginTop="30dp"
		android:gravity="center"
		android:background="@drawable/button"
		android:text="Ok"
		android:textColor="#FFFFFF"
		android:textSize="20dp"/>
</LinearLayout>
