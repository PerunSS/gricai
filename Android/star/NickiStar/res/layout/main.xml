<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/background_blue" >   
	<RelativeLayout 
	    android:id="@+id/content_layout"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginBottom="60dip">	
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="60dip"
			android:background="@drawable/menu_bar"
			android:gravity="top"
			android:id="@+id/menu_bar">
			<Button 
				android:layout_width="60dip"
				android:layout_height="60dip"
				android:id="@+id/cerspri_home_button"
				android:background="@drawable/cerspri_button"/>

			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_weight="1"
			    android:gravity="center|center_horizontal"
			    android:paddingBottom="20dip"
			    android:text="@string/app_name"
			    android:textSize="20dip" 
			    android:textColor="#ffcd32"
			    android:paddingTop="5dp"
			    android:textStyle="bold"/>

			<LinearLayout 
			    android:layout_width="30dip"
				android:layout_height="60dip"
				android:orientation="vertical">
				<Button
				    android:id="@+id/toggle_menu"
				    android:layout_width="30dip"
				    android:layout_height="30dip"
				    android:background="@drawable/close_menu_button" 
				    android:layout_marginTop="7dip"/>
				<View 
				    android:layout_width="30dip"
					android:layout_height="20dip"/>
			</LinearLayout>
			<View
				android:layout_width="25dip"
				android:layout_height="50dip"/>
		</LinearLayout>
		<LinearLayout 
		  	android:visibility="gone"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/news_layout"
			android:orientation="horizontal"
			android:layout_below="@id/menu_bar"
			android:paddingLeft="7dip"
			android:paddingRight="7dip">
			<TextView 
			    android:visibility="gone"
				android:layout_width="50dip"
				android:layout_height="50dip"
				android:id="@+id/news_number"
				android:background="@drawable/field"
				android:gravity="center"
				android:textColor="#244690"/>
			<TextView 
				android:layout_width="50dip"
				android:layout_height="60dp"
				android:layout_weight="1"
				android:id="@+id/news_header"
				android:background="@drawable/field"
				android:gravity="center"
				android:textColor="#244690"
				android:textSize="25dip" />
		</LinearLayout>
		<ScrollView  
		    android:id="@+id/data_scroll_view"
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:layout_below="@id/news_layout">
		    <LinearLayout 
		    	android:visibility="invisible"
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:id="@+id/text_layout"
		    	android:orientation="vertical"
		  		android:layout_gravity="center"
		  		android:paddingTop="5dip">
		    	<View 
		    		android:layout_width="fill_parent"
		    		android:layout_height="35dp"
		    		android:background="@drawable/text_field_top"/>
			    <TextView
			    	android:id="@+id/scroll_text"
			    	android:layout_width="fill_parent"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="1"
			    	android:textSize="25dip" 
			    	android:textColor="#244690"
			    	android:textStyle="bold"
			    	android:gravity="center"
			    	android:layout_gravity="center"
			    	android:background="@drawable/text_field"
			    	android:paddingLeft="25dp"
			    	android:paddingRight="25dp"
			    />
			    <View
			    	android:layout_width="fill_parent"
		    		android:layout_height="35dp" 
		    		android:background="@drawable/text_field_bottom"/>
		    </LinearLayout>
		</ScrollView>
	</RelativeLayout>	
	<com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer
		xmlns:my="http://schemas.android.com/apk/res/com.cerspri.star.NickiMinaj"
		android:id="@+id/menuDrawer"
		my:direction="topToBottom"
		android:layout_width="fill_parent"
		android:layout_height="340dip"
		my:handle="@+id/handle"
		my:content="@+id/content"
		android:layout_marginTop="40dip">
		<include
			android:id="@id/content"
			layout="@layout/menu_content" />
		<ImageView
			android:id="@id/handle"
			android:layout_width="wrap_content"
			android:layout_height="0dip"
			android:background="#FFFFFF"/>
	</com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer>    
	<View 		
		android:layout_width="fill_parent"
		android:layout_height="0dip"
		android:id="@+id/anchor_bottom"
		android:layout_alignParentBottom="true"/>
	<com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer
		xmlns:my="http://schemas.android.com/apk/res/com.cerspri.star.NickiMinaj"
		android:id="@+id/factsDrawer"
		my:direction="bottomToTop"
		android:layout_width="fill_parent"
		android:layout_height="60dip"
		my:handle="@+id/handle"
		my:content="@+id/content" 
		android:layout_above="@id/anchor_bottom">
		<include
			android:id="@id/content"
			layout="@layout/facts_buttons_drawer" />
		<ImageView
			android:id="@id/handle"
			android:layout_width="wrap_content"
			android:layout_height="0dip"
			android:background="#FFFFFF"/>
	</com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer> 
	
	<com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer
		xmlns:my="http://schemas.android.com/apk/res/com.cerspri.star.NickiMinaj"
		android:id="@+id/newsDrawer"
		my:direction="bottomToTop"
		android:layout_width="fill_parent"
		android:layout_height="60dip"
		my:handle="@+id/handle"
		my:content="@+id/content" 
		android:layout_above="@id/anchor_bottom">
		<include
			android:id="@id/content"
			layout="@layout/news_buttons_drawer" />
		<ImageView
			android:id="@id/handle"
			android:layout_width="wrap_content"
			android:layout_height="0dip"
			android:background="#FFFFFF"/>
	</com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer> 

</RelativeLayout>
