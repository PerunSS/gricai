<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@drawable/background_blue" >	
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="40dp"
			android:background="@drawable/menu_bar"
			android:layout_marginTop="7dp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp">
			<Button 
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginLeft="7dp"
				android:id="@+id/cerspri_home_button"
				android:background="@drawable/cerspri_button"/>
		</LinearLayout>
		<ScrollView  
		    android:layout_width="200dp" 
		    android:layout_height="fill_parent"
		    android:layout_weight="1" >
		    <TextView
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:id="@+id/scroll_text"
		    	android:textSize="18dp" 
		    />
		</ScrollView>
	</LinearLayout>	
	<com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer
		xmlns:my="http://schemas.android.com/apk/res/com.cerspri.star.NickiMinaj"
		android:id="@+id/drawer"
		my:direction="topToBottom"
		android:layout_width="fill_parent"
		android:layout_height="400dp"
		my:handle="@+id/handle"
		my:content="@+id/content"
		android:layout_marginTop="40dp">
		<include
			android:id="@id/content"
			layout="@layout/pen_content" />
		<ImageView
			android:id="@id/handle"
			android:layout_width="wrap_content"
			android:layout_height="40px"
			android:background="#FFFFFF"/>
	</com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer>    

</RelativeLayout>
