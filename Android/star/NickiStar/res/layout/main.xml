<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/background_blue" >   
	<RelativeLayout 
	    android:id="@+id/content_layout"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginBottom="60dip">	
		<LinearLayout 
			android:orientation="horizontal"
			android:layout_width="fill_parent"
			android:layout_height="60dip"
			android:background="@drawable/menu_bar"
			android:gravity="top">
			<Button 
				android:layout_width="60dip"
				android:layout_height="60dip"
				android:id="@+id/cerspri_home_button"
				android:background="@drawable/cerspri_button"/>
			<View
				android:layout_width="1dip"
				android:layout_height="1dip"
				android:layout_weight="1"/>
			<LinearLayout 
			    android:layout_width="30dip"
				android:layout_height="60dip"
				android:orientation="vertical">
				<Button
				    android:id="@+id/toggle_menu"
				    android:layout_width="30dip"
				    android:layout_height="30dip"
				    android:background="@drawable/open_menu_button" 
				    android:layout_marginTop="7dip"/>
				<View 
				    android:layout_width="30dip"
					android:layout_height="20dip"/>
			</LinearLayout>
			<View
				android:layout_width="25dip"
				android:layout_height="50dip"/>
		</LinearLayout>
		<ScrollView  
		    android:id="@+id/data_scroll_view"
		    android:layout_width="fill_parent" 
		    android:layout_height="fill_parent"
		    android:layout_weight="1">
		    <TextView
		    	android:layout_width="fill_parent"
		    	android:layout_height="fill_parent"
		    	android:id="@+id/scroll_text"
		    	android:textSize="25dip" 
		    	android:textColor="#000000"
		    	android:textStyle="bold"
		    	android:gravity="center"
		    	android:layout_gravity="center"
		    />
		</ScrollView>
	</RelativeLayout>	
	<com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer
		xmlns:my="http://schemas.android.com/apk/res/com.cerspri.star.NickiMinaj"
		android:id="@+id/menuDrawer"
		my:direction="topToBottom"
		android:layout_width="fill_parent"
		android:layout_height="340dip"
		my:handle="@+id/handle"
		my:content="@+id/content"
		android:layout_marginTop="40dip">
		<include
			android:id="@id/content"
			layout="@layout/menu_content" />
		<ImageView
			android:id="@id/handle"
			android:layout_width="wrap_content"
			android:layout_height="0dip"
			android:background="#FFFFFF"/>
	</com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer>    
	<com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer
		xmlns:my="http://schemas.android.com/apk/res/com.cerspri.star.NickiMinaj"
		android:id="@+id/factsDrawer"
		my:direction="bottomToTop"
		android:layout_width="fill_parent"
		android:layout_height="60dip"
		my:handle="@+id/handle"
		my:content="@+id/content" 
		android:layout_alignParentBottom="true">
		<include
			android:id="@id/content"
			layout="@layout/facts_buttons_drawer" />
		<ImageView
			android:id="@id/handle"
			android:layout_width="wrap_content"
			android:layout_height="0dip"
			android:background="#FFFFFF"/>
	</com.cerspri.star.NickiMinaj.widget.MultiDirectionSlidingDrawer> 

</RelativeLayout>
