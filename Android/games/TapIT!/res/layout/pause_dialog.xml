<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        style="@style/score_panel" >

        <RelativeLayout
            android:id="@+id/game_score_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/score_text"
                android:text="@string/game_score_pause" />

            <TextView
                android:id="@+id/game_score"
                style="@style/score_value" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_score_panel" >

            <TextView
                style="@style/score_text"
                android:text="@string/max_time_pause" />

            <TextView
                android:id="@+id/max_time"
                style="@style/score_value" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/secondary_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <View
            android:layout_width="5dp"
            android:layout_height="fill_parent" />

        <Button
            android:id="@+id/continue_game_button"
            style="@style/main_button_small"
            android:background="@drawable/menu_button"
            android:text="@string/continue_game" />

        <Button
            android:id="@+id/rate_us"
            style="@style/main_button_small"
            android:background="@drawable/menu_button"
            android:text="@string/rate_us" />

        <Button
            android:id="@+id/back"
            style="@style/main_button_small"
            android:background="@drawable/menu_button"
            android:text="@string/back" />

        <View
            android:layout_width="5dp"
            android:layout_height="fill_parent" />
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/sound"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:text="S" />

        <Button
            android:id="@+id/music"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/sound"
            android:text="M" />
    </RelativeLayout>

</RelativeLayout>