<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	xmlns:myapp="http://schemas.android.com/apk/res/com.cerSprikRu.CocktailMixer"
  	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="@drawable/bg_2">	
  		<TextView
  			android:id="@+id/favorite_cocktail_name"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:textSize="35sp"
  			android:textColor="#FFFFFF"
  			android:gravity="center"
  			android:layout_weight="3"
  			android:paddingTop="15sp"
  		/>
  		<LinearLayout
  			android:orientation="vertical"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="1">
  			
  		<TextView
  			android:id="@+id/favorite_cocktail_recipe"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="1"
  			android:textSize="22sp"
  			android:textColor="#FFFFFF"
  			android:gravity="center"
  		/>
  		<com.admob.android.ads.AdView
			android:id="@+id/ad6"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			myapp:backgroundColor="#000000"
			myapp:primaryTextColor="#FFFFFF"
			myapp:secondaryTextColor="#CCCCCC"
		/>
  		</LinearLayout>
  		<LinearLayout
  			android:orientation="horizontal"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="3">
  			<Button
  				android:id="@+id/remove_from_favorites"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:layout_weight="1"
  				android:background="@drawable/btn_remove"
  			/>
  			<Button
  				android:id="@+id/share_favorite_cocktail"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:layout_weight="1"
  				android:background="@drawable/btn_share"
  			/>
  			
  			
  		</LinearLayout>
  	
</LinearLayout>