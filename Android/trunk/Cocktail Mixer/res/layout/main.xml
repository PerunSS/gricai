<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:myapp="http://schemas.android.com/apk/res/com.cerSprikRu.CocktailMixer"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    android:background="@drawable/bg"
    >
    <LinearLayout 
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:scrollbars="horizontal"
    	android:layout_weight="4"
    	android:background="@drawable/bg">
    	<Button android:id="@+id/favorites"
  			android:text ="Favorites"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:textSize="20sp"/>
    </LinearLayout>

<LinearLayout
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:layout_weight="1"
	>   
<com.admob.android.ads.AdView
			android:id="@+id/ad1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			myapp:backgroundColor="#000000"
			myapp:primaryTextColor="#FFFFFF"
			myapp:secondaryTextColor="#CCCCCC"
		/>
<ScrollView 
 	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:layout_weight="1"
	>
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical"
    >
    <TextView android:id="@+id/strong_d"
    	android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:text="Strong drinks"
		android:textSize="27sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:gravity="center"
	/>
	<TableLayout android:id="@+id/strong_drinks" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:stretchColumns="*"
		>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/vodka" 
				android:text="Vodka"
				android:textColor="#000000" 
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/tequila" 
				android:text="Tequila" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/gin" 
				android:text="Gin" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/whisky" 
				android:text="Whisky" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/rum" 
				android:text="Rum" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/cognac" 
				android:text="Cognac" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/brandy" 
				android:text="Brandy" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/absinthe" 
				android:text="Absinthe" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
	</TableLayout>
	<TextView android:id="@+id/liqueur_d"
   		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:text="Liqueurs"
		android:textSize="27sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:gravity="center"
	/>
	<TableLayout android:id="@+id/liquers_drinks" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:stretchColumns="*">
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/l_orange" 
				android:text="Orange type"
				android:textColor="#000000" 
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/l_menthol" 
				android:text="Menthol type"
				android:textColor="#000000" 
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/l_chocolate" 
				android:text="Chocolate type"
				android:textColor="#000000" 
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/l_coffee" 
				android:text="Coffee type" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/l_cherry" 
				android:text="Cherry type" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/l_strawberry" 
				android:text="Other type" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
	</TableLayout>
	<TextView android:id="@+id/other_alc_d"
   		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:text="Other alcohol"
		android:textSize="27sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:gravity="center"
	/>
	<TableLayout android:id="@+id/other_alc_drinks" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:stretchColumns="*">
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/wine" 
				android:text="Wine"
				android:textColor="#000000" 
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/champagne" 
				android:text="Champagne" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/Vermouth" 
				android:text="Vermouth" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/beer" 
				android:text="Beer" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
	</TableLayout>
		<TextView android:id="@+id/non_alc_d"
   		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		android:text="Non-alcohol drinks"
		android:textSize="27sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:gravity="center"
	/>
	<TableLayout android:id="@+id/non_alc" 
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content"
		android:stretchColumns="*">
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/j_orange" 
				android:text="Orange juice"
				android:textColor="#000000" 
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/j_apple" 
				android:text="Apple juice" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/cola" 
				android:text="Cola type" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/bitter" 
				android:text="Bitter type" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/m_water" 
				android:text="Tonic water" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/j_lemon" 
				android:text="Lemon type" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
		</TableRow>
		<TableRow>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/milk" 
				android:text="Milk" 
				android:textColor="#000000"
				android:layout_width="wrap_content"/>
			<CheckBox android:layout_height="wrap_content" 
				android:id="@+id/j_other" 
				android:text="Other jueces"
				android:textColor="#000000" 
				android:layout_width="wrap_content"/>
		</TableRow>
	</TableLayout>
</LinearLayout>
</ScrollView>
<com.admob.android.ads.AdView
			android:id="@+id/ad2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			myapp:backgroundColor="#000000"
			myapp:primaryTextColor="#FFFFFF"
			myapp:secondaryTextColor="#CCCCCC"
		/>
</LinearLayout>
<Button android:id="@+id/mix"
  			android:text ="Mix it up!!!"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="4"
  			android:textSize="25sp"/>
</LinearLayout> 
