<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	xmlns:myapp="http://schemas.android.com/apk/res/com.cerSprikRu.grind.StupidInsults"
  	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
   	android:orientation="vertical"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="#FFFFFF">
  	<LinearLayout
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="50dp">
  		<ImageView 
  			android:src="@drawable/applogo"
  			android:scaleType="fitXY"
  			android:layout_width="50dp"
  			android:layout_height="50dp"
  		/>
  		<View
  			android:layout_width="50dp"
  			android:layout_height="50dp"
  			android:layout_weight="1"
  			android:background="@drawable/appname"
  		/>
  		<Button
  			android:id ="@+id/search"
  			android:background="@drawable/search_button"
  			android:layout_width="50dp"
  			android:layout_height="50dp"/>
  		<Button
  			android:id="@+id/addToFavorites"
  			android:layout_width="50dp"
  			android:layout_height="50dp"/>
  		<Button 
  			android:id="@+id/openFavorites"
  			android:layout_width="50dp"
  			android:layout_height="50dp"
  			android:background="@drawable/favorites_button"/>	 	
  	</LinearLayout>  
  	
  	<LinearLayout
  		android:orientation="vertical"
  		android:layout_width="fill_parent"
  		android:layout_height="100dp"
  		android:background="@drawable/bckground"
  		android:layout_weight="1">
  		<TextView
  			android:id="@+id/factText"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:textSize="27dp"
  			android:gravity="center"
  			android:textColor="#000000"
 			android:layout_weight="2"
  		/>	
  	</LinearLayout>	
  	<com.google.ads.AdView android:id="@+id/ad1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="a14e24022f3eee1"
                         ads:adSize="BANNER"
                         ads:loadAdOnCreate="true"/>
  	<LinearLayout
  		android:orientation="horizontal"
  		android:layout_width="fill_parent"
  		android:layout_height="40dp">
  		<Button
  			android:id="@+id/previous"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/previous_button"
  			android:layout_weight="1"/>
  		<Button 
  			android:id="@+id/next"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/next_button"
  			android:layout_weight="1"/>
  		<Button 
  			android:id="@+id/random"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/random_button"
  			android:layout_weight="1"/>	
  		<Button 
  			android:id="@+id/share"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:background="@drawable/share_button"
  			android:layout_weight="1"/>
  	</LinearLayout>
  	<com.google.ads.AdView android:id="@+id/ad2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="a14e24022f3eee1"
                         ads:adSize="BANNER"
                         ads:loadAdOnCreate="true"/>
</LinearLayout>