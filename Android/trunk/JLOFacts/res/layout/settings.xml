<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <TableLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/tableLayout1">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Text color" android:id="@+id/lblRextColor" android:layout_width="100dp" android:layout_height="wrap_content"></TextView>
            <Button android:text="Pick color" android:id="@+id/btnTxtColor" android:layout_width="100dp" android:layout_height="wrap_content"></Button>
            <TextView android:text="" android:id="@+id/textColor" android:layout_width="100dp" android:layout_height="wrap_content"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Shadow color" android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <Button android:text="Pick color" android:id="@+id/btnShColor" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
            <TextView android:text="" android:id="@+id/shColor" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Shadow size" android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <SeekBar android:layout_width="match_parent" android:id="@+id/seekShSize" android:layout_height="wrap_content"></SeekBar>
            <TextView android:text="" android:id="@+id/shSize" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        </TableRow>
        <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:text="Font size" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
            <SeekBar android:layout_width="match_parent" android:id="@+id/seekFontSize" android:layout_height="wrap_content"></SeekBar>
            <TextView android:text="" android:id="@+id/fontSize" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow5" android:layout_width="match_parent">
            <TextView android:layout_width="wrap_content" android:id="@+id/textView7" android:text="" android:layout_height="wrap_content"></TextView>
            <Button android:text="Cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/settBtnCancel"></Button>
            <Button android:text="OK" android:id="@+id/settBtnOk" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
        </TableRow>
    </TableLayout>
    
</LinearLayout>
