<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="40dp"
    	android:background="@drawable/bar">
    	<Button
    		android:id="@+id/cerspri_button"
    		android:background="@drawable/logo_button"	
    		android:layout_width="40dp"
	    	android:layout_height="40dp"
    	/>
    	<TextView
    		android:layout_width="40dp"
	    	android:layout_height="40dp"
	    	android:layout_weight="1"
    	/>
    	<Button
    		android:layout_gravity="right|center_vertical"
    		android:layout_marginRight="5dp"
    		android:id="@+id/settings_button"
    		android:background="@drawable/settings_button"	
    		android:layout_width="35dp"
	    	android:layout_height="35dp"
    	/>
    </LinearLayout>
    <LinearLayout
  			android:orientation="vertical"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="1"
  		>	
  		<ScrollView
  			android:id="@+id/scroll_view"
  			android:layout_height="fill_parent" 
			android:layout_width="fill_parent"
			android:layout_weight="1">
		<TextView android:text="@+id/fact" 
			android:id="@+id/fact"
			android:gravity="center" 
			android:layout_gravity="center"
			android:layout_height="fill_parent" 
			android:layout_width="fill_parent"
			android:textColor="#CCCC00"
			android:shadowColor="#FF0000"
			android:textStyle="bold"
			android:shadowRadius="10"
			android:shadowDx="0"
			android:shadowDy="0"
			android:layout_weight="1"
			android:textSize="18dp"
		/>
		</ScrollView>
		<com.google.ads.AdView android:id="@+id/ad1"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="a14d8ddf3829b48"
                         ads:adSize="BANNER"/>

	</LinearLayout>	
	<LinearLayout
  			android:orientation="vertical"
  			android:layout_width="fill_parent"
  			android:layout_height="80dp"
  	>	
    	<LinearLayout
  			android:orientation="horizontal"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:layout_weight="1"
  			android:background="#000000"
  		>
  			<Button 
  				android:id="@+id/random"
  				android:text="Random"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:layout_weight="1"
  				android:background="@drawable/facts_button"/>	
  			<Button 
  				android:id="@+id/save"
  				android:text ="Save Image"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:layout_weight="1"
  				android:background="@drawable/facts_button"/>
  			<Button 
  				android:id="@+id/share"
  				android:text ="Share"
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:layout_weight="1"
  				android:background="@drawable/facts_button"/>
		</LinearLayout>
		
		<com.google.ads.AdView android:id="@+id/ad2"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         ads:adUnitId="a14d8ddf3829b48"
                         ads:adSize="BANNER"/>

	</LinearLayout>		
</LinearLayout>
